                        <goals>
                            <goal>copy</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>ca.uhn.hapi.fhir</groupId>
                                    <artifactId>hapi-fhir-client</artifactId>
                                </artifactItem>
                            </artifactItems>
                            <outputDirectory>../feasibility-dsf-process-docker-test-setup/dic-2/bpe/plugin
                            </outputDirectory>
